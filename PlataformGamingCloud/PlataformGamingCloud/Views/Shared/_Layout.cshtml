<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Platform of Gaming in Cloud</title>
    <link rel="stylesheet" href="~/css/reset.css"/>
    <link rel="stylesheet" href="~/css/site.css"/>
    <link rel="stylesheet" href="~/css/hamburguer.css"/>
    <link rel="stylesheet" href="~/css/pages/home.css"/>
    <link rel="stylesheet" href="~/css/pages/listargames.css"/>
    <link rel="stylesheet" href="~/css/pages/cadastrarjogos.css/>
    <link rel="stylesheet" href="~/PlatformGamingCloud.styles.css"/>
    <link rel="preconnect" href="https://fonts.googleapis.com"/>
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin/>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@100..900&display=swap"/>
</head>
<body>
    <header>
        <nav class="menu-nav">
            <div class="menu-nav-content">
                <!--<img src="~/img/Greenway_Text.png" alt="Logo Greenway" />-->
                <a class="menu-logo" asp-area="" asp-controller="Home" asp-action="Index">Gaming Cloud</a>
                <button class="menu-hamburguer" onclick="toggleMenu()"><img src="~/img/ico-hamburguer.svg" alt=""></button>
                <div class="menu-items-content">
                    <a asp-area="" asp-controller="Home" asp-action="Index">Inicio</a>

                    <div class="dropdown">
                        <a class="dropbtn">Game<span class="dropdown-icon"></span></a>
                        <div class="dropdown-content">
                            <a asp-area="" asp-controller="Game" asp-action="Cadastrar"><img src="~/img/ico-cadastrar.svg" alt="" class="icon-item-dropdown">Cadastrar</a>
                            <div class="dropdown-content-divisor"></div>
                            <a asp-area="" asp-controller="Game" asp-action="Index"><img src="~/img/ico-listar.svg" alt="" class="icon-item-dropdown">Listar</a>
                        </div>
                    </div>
                    <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacidade</a>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="main-content">
        @RenderBody()
    </main>

    <footer class="footer-content">
        <div class="footer-container">
            <p>Technos &  &copy; 2024 - <a asp-area="" asp-controller="Home" asp-action="Index">Gaming Cloud</a> - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a></p>
        </div>
    </footer>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/hamburguer.js" asp-append-version="true"></script>
    <script src="~/js/confirm-page.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
